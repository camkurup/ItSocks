<Window x:Class="ItSocks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItSocks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid
        x:Name="A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid
            x:Name="B"
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid
                x:Name="C"
                Grid.Row="0">
                <StackPanel
                    Orientation="Horizontal"
                    Background="LightYellow"
                    Margin="10">
                    <StackPanel>
                        <Label>Strikkefasthed</Label>
                        <StackPanel
                            Orientation="Horizontal">
                            <Label>Maske:</Label>
                        <TextBox 
                            x:Name="Masks"
                            Width="50"
                            Height="18"
                            Margin="5,0,0,0"/>

                        <Label>Pind:</Label>
                        <TextBox 
                            x:Name="Rows"
                            Width="50"
                            Height="18"
                            Margin="5,0,0,0"/>
                        </StackPanel>
                        
                    </StackPanel>
                    <StackPanel
                        Orientation="Horizontal"
                        Margin="50,0,0,0">
                        <Label>Sko størrelse:</Label>
                    <ListBox 
                        x:Name="ShoeSize"
                        Width="150"
                        Height="70" 
                        d:ItemsSource="{d:SampleData ItemCount=5}" 
                        VerticalAlignment="Top"/>
                        
                    </StackPanel>
                    
                </StackPanel>
                
            </Grid>

            <Grid
                x:Name="D">

            </Grid>

        </Grid>

        <Grid
            x:Name="J"
            Grid.Column="1">
            <StackPanel
                Margin="20">
                <Label>Sokke Design</Label>
                
                <Image />
                
                <Button 
                    x:Name="Calculat" 
                    Click="Calculat_Click"
                    VerticalAlignment="Bottom">
                    Gem som PDF
                </Button>
                
            </StackPanel>
            
        </Grid>
   
    </Grid>
</Window>
