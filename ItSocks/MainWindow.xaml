                        <Image.Source>
                            <BitmapImage 
                                DecodePixelWidth="100"
                                UriSource="C:\Users\CKU\Documents\Skole\H5\Prøve-Svendeprøve\ItSocks\ItSocks\Img\placeholder.png"></BitmapImage>
                        </Image.Source>
                    </Image>
                </StackPanel>
                <StackPanel
                    Grid.Row="3"
                    Orientation="Horizontal">
                    <Label
                        Width="75">Sål:</Label>
                    <Image
                        Height="50"
