<Window x:Class="ItSocks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItSocks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid
        x:Name="A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid
            x:Name="B"
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid
                x:Name="C"
                Grid.Row="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Background="LightYellow"
                    Margin="10">
                    <StackPanel>
                        <Label>Strikkefasthed</Label>
                        <StackPanel
                            Orientation="Horizontal">
                            <Label>Maske:</Label>
                        <TextBox 
                            x:Name="Masks"
                            Width="50"
                            Height="18"
                            Margin="5,0,0,0"/>

                        <Label>Pind:</Label>
                        <TextBox 
                            x:Name="Rows"
                            Width="50"
                            Height="18"
                            Margin="5,0,0,0"/>
                        </StackPanel>
                        
                    </StackPanel>
                    <StackPanel
                        
                        Orientation="Horizontal"
                        Margin="50,0,0,0">
                        <Label>Sko størrelse:</Label>
                    <ListBox 
                        x:Name="ShoeSize"
                        Width="150"
                        Height="70" 
                        d:ItemsSource="{d:SampleData ItemCount=5}" 
                        VerticalAlignment="Top"/>
                        
                    </StackPanel>
                    
                </StackPanel>
                
            </Grid>

            <Grid
                Grid.Row="1"
                x:Name="D">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    x:Name="Manchet"
                    Orientation="Horizontal">
                    <Label
                        Width="75"
                       >Manchet:</Label>

                    <StackPanel 
                        VerticalAlignment="Center">
                        <Label
                            Width="75">Rib i cm.:</Label>
                        <Slider Minimum="1" 
                                Maximum="10" 
                                TickPlacement="BottomRight" 
                                TickFrequency="1" 
                                IsSnapToTickEnabled="True"/>
                    </StackPanel>

                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    x:Name="Shaft"
                    Orientation="Horizontal">
                    <Label
                        Width="75"
                        >Skaft:</Label>
                    <StackPanel 
                        VerticalAlignment="Center">
                        <Label 
                            Width="75">Skaft i cm.:</Label>
                        <Slider 
                            Minimum="1" 
                            Maximum="10" 
                            TickPlacement="BottomRight" 
                            TickFrequency="1" 
                            IsSnapToTickEnabled="True"  />
                    </StackPanel>
                </StackPanel>
                        
                <StackPanel
                    Grid.Row="2"
                    x:Name="Heel"
                    Orientation="Horizontal">
                    <Label
                        Width="75">Hæl:</Label>                    
                </StackPanel>
                
                <StackPanel
                    Grid.Row="3"
                    x:Name="Soel"
                    Orientation="Horizontal">
                    <Label
                        Width="75">Sål:</Label>                    
                </StackPanel>
                
                <StackPanel
                    Grid.Row="4"
                    x:Name="Toe"
                    Orientation="Horizontal">
                    <Label
                        Width="75">Tå:</Label>
                </StackPanel>
            </Grid>

        </Grid>

        <Grid
            x:Name="J"
            Grid.Column="1">
            <StackPanel
                Margin="20">
                <Label>Sokke Design</Label>

                <Image
                    Margin="0,50,0,50">
                    <Image.Source>
                        <BitmapImage 
                            DecodePixelWidth="100"
                            UriSource="C:\Users\CKU\Documents\Skole\H5\Prøve-Svendeprøve\ItSocks\ItSocks\Img\placeholder.png"></BitmapImage>
                    </Image.Source>
                </Image>
                
                <Button 
                    x:Name="Calculat" 
                    Click="Calculat_Click"
                    VerticalAlignment="Bottom">
                    Gem som PDF
                </Button>

                <Label
                    Background="LightCyan">Placeholder</Label>
                
            </StackPanel>
            
        </Grid>
   
    </Grid>
</Window>
