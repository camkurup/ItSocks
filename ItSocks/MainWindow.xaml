<Window x:Class="ItSocks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItSocks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Grid.Row="0"
            Margin="10">
            
            <StackPanel>
                <Label>Strikkefasthed</Label>
                
                <Label>Maske:</Label>
                <TextBox x:Name="KnittingGaugM"/>

                <Label>Pind:</Label>
                <TextBox x:Name="KnittingGaugP"/>

            </StackPanel>

            <Label>Sko størrelse</Label>
            <ListBox 
                Height="100" 
                x:Name="ShoeSize" 
                SelectionChanged="ShoeSize_SelectionChanged">
                
            </ListBox>
            <Button 
                x:Name="Calculat" 
                Click="Calculat_Click"
                Margin="0,10,0,0">Beregn</Button>
           
        </StackPanel>

        <StackPanel 
            Grid.Row="1"
            Margin="10">
            <Label 
                Background="Teal"
                Padding="10"> Antal af masker slåes op: </Label>
            <TextBox 
                x:Name="NumberOfMAsks" 
                Background="LightSeaGreen"
                Margin="0,10,0,0"
                Padding="10"/>

        </StackPanel>
        
        
    </Grid>
</Window>
